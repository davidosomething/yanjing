{
  "name": "yanjing",
  "version": "1.0.0",
  "description": "Window size and movement",
  "homepage": "https://github.com/davidosomething/yanjing",
  "main": "code/main.js",
  "directories": {},
  "scripts": {
    "start": "npm run --silent build && npm run --silent installed 2>/dev/null && { npm run --silent upgrade; echo UPGRADED; } || { npm run --silent install && echo INSTALLED; }",
    "build": "node build.js > metadata.desktop",
    "installed": "plasmapkg2 --type kwinscript --show yanjing",
    "install": "plasmapkg2 --type kwinscript --install .",
    "upgrade": "plasmapkg2 --type kwinscript --upgrade .",
    "uninstall": "plasmapkg2 --type kwinscript --remove yanjing",
    "release": "zip -r yanjing.kwinscript contents/ LICENSE metadata.desktop",
    "debugger": "qdbus org.kde.plasmashell /PlasmaShell org.kde.PlasmaShell.showInteractiveKWinConsole"
  },
  "author": {
    "name": "David O'Trakoun",
    "email": "me@davidosomething.com",
    "url": "https://davidosomething.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "nunjucks": "^3.2.3"
  }
}
